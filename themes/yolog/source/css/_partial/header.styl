header
	position: fixed
	width: 18.75rem
	min-height: 100%
	margin-left: -18.75rem
	padding: 2.5rem
	text-align: center
	z-index: 1

.logo
	display: inline-block
	position: relative
	width: logo-width
	height: logo-height
	margin-top: .75rem
	svg
		position: absolute
		top: 0
		left: 0
		rect
			fill: color-text
		polygon
			fill: color-background

.menu-icon-wrapper
	margin: 1.25rem 0
	button
		position: relative
		height: 42px
		width: 42px
		background-color: transparent
		cursor: pointer
.menu-bar-container, .menu-bar-content
	display: block
	position: absolute
	top: 0
	left: 0
	width: 28px
	height: 2px
.menu-bar-container
	overflow: hidden
	&:nth-of-type
		&(1)
			transform: translateX(7px) translateY(12px)
			.menu-bar-content
				transition: transform .5s cubic-bezier(.165, .84, .44, 1) .5s
		&(2)
			transform: translateX(7px) translateY(20px)
			.menu-bar-content
				transition: transform .5s cubic-bezier(.165, .84, .44, 1) .4s
		&(3)
			transform: translateX(7px) translateY(28px)
			.menu-bar-content
				transition: transform .5s cubic-bezier(.165, .84, .44, 1) .3s
		&(4)
			transform: rotate(45deg) translateX(7px) translateY(20px)
			transform-origin: 21px 21px
			.menu-bar-content
				transform: translateX(-100%)
				transition: transform .5s cubic-bezier(.165, .84, .44, 1) .1s
		&(5)
			transform: rotate(-45deg) translateX(7px) translateY(20px)
			transform-origin: 21px 21px
			.menu-bar-content
				transform: translateX(100%)
				transition: transform .5s cubic-bezier(.165, .84, .44, 1) 0s
.menu-bar-content
	background-color: color-gray
	transition: all .5s ease-out

nav
	visibility: hidden
	opacity: 0
	transition: opacity .3s, visibility 0s .3s
	li + li
		margin-top: .5em

.open
	.menu-bar-container:nth-of-type
		&(1) .menu-bar-content
			transform: translateX(100%)
			transition: transform .5s cubic-bezier(.165, .84, .44, 1) .2s
		&(2) .menu-bar-content
			transform: translateX(100%)
			transition: transform .5s cubic-bezier(.165, .84, .44, 1) .1s
		&(3) .menu-bar-content
			transform: translateX(100%)
			transition: transform .5s cubic-bezier(.165, .84, .44, 1) 0s
		&(4) .menu-bar-content
			transform: translateX(0)
			transition: transform .5s cubic-bezier(.165, .84, .44, 1) .5s
		&(5) .menu-bar-content
			transform: translateX(0)
			transition: transform .5s cubic-bezier(.165, .84, .44, 1) .6s
	nav
		visibility: visible
		opacity: 1
		transition: opacity .3s, visibility 0s
